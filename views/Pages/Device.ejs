<% include ../Partials/head %>

<body style=" background: #f1f2f7">
<!-- Left Panel -->

<% include ../Partials/header %>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Configuration Device</h1>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">

    <div class="animated fadeIn">

        <div class="row">

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <strong>Network Settings</strong>
                    </div>
                    <div class="card-body card-block">
                        <form name="form" action="/device/guardar" method="post" class="form-horizontal">
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input"
                                                                 class=" form-control-label">DHCP </label></div>
                                <div class="col-12 col-md-9">
                                    <label class="switch switch-3d switch-primary mr-3"><input type="checkbox"
                                                                                               name="isDHCP"
                                                                                               class="switch-input"
                                                                                               onclick="javascript:validar(this);" >
                                        <span class="switch-label"></span><span class="switch-handle"></span></label>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">IP
                                        Address</label></div>
                                <div class="col-12 col-md-9"><input type="text" id="text-input" name="address"
                                                                    class="form-control"
                                                                    style="moz-placeholder: stalic" value="<%= ip %>"/></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="password-input" class=" form-control-label">Netmask</label>
                                </div>
                                <div class="col-12 col-md-9"><input type="text" id="text-input" name="netmask"
                                                                    class="form-control" value="<%=net %>" /></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Default
                                        Gateway</label></div>
                                <div class="col-12 col-md-9"><input type="text" id="password-input" name="defaultg"
                                                                    class="form-control" /></div>
                            </div>


                    </div>
                </div>
            </div>
            <div class="breadcrumbs">
                <div class="col-sm-12">
                    <div class="page-header float-right">
                        <button type="submit" class="btn btn-primary btn-sm" style="margin-top: 10px"><i
                                    class="fa fa-check"></i> Modify
                        </button>

            </form>

                        <a href="/device">
                            <button type="submit" class="btn btn-danger btn-sm" style="margin-top: 10px"><i class="fa fa-times"></i> Cancel
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div><!-- .content -->
        </div><!-- /#right-panel -->

        <!-- Right Panel -->

        <% include ../Partials/footer %>

</body>
<script src="assets/js/myJS.js" type="text/javascript"> </script>
</html>
