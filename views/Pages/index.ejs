<body style=" background: #f1f2f7">
<!-- Left Panel -->

<% include ../Partials/header %>

<!-- Right Panel -->
<div class="content mt-3">
    <div class="animated fadeIn">
<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Trunks Table</strong>
            </div>
            <div class="card-body">
                <table class="table" align="center">
                    <thead class="thead-dark">
                    <tr>
                        <th>Trunk Name</th>
                        <th>Source Address</th>
                        <th>Destination Address</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><%=trunkname%></td>
                        <td><%=saddress%></td>
                        <td><%=daddress%></td>
                        <td><%=status%></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Call list</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Source</th>
                                <th>Destination</th>
                                <th>prueba</th>
                                <th>Duration</th>

                            </tr>
                            </thead>
                            <tbody>

                            <% for(var i=0; i<listCall.length;i++){%>
                            <tr>
                                <td><%=listCall[i].calldate%></td>
                                <td><%=listCall[i].src%></td>
                                <td><%=listCall[i].dst%></td>
                                <td><%=listCall[i].disposition%></td>
                                <td><%=listCall[i].duration%></td>
                            </tr>
                            <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mb-3">Single Bar Chart </h4>
                        <canvas id="singelBarChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
