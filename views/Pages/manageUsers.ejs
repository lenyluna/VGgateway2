<% include ../Partials/head %>

<body style=" background: #f1f2f7">
<!-- Left Panel -->
<% include ../Partials/header %>

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Settings</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li>Settings</li>
                            <li>Manage Users</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
              <div class="row">
                <div class="col-md-12">
                  <div class="card">
                    <div class="card-header">
                      <button type="button" class="btn btn-success"><i class="fa fa-magic"></i>&nbsp; Create User</button>
                      <button type="button" class="btn btn-danger"><i class="fa fa-trash-o"></i>&nbsp; Delete user</button>
                    </div>
                  </div>
                </div>
              </div>
                <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Users Table</strong>
                        </div>
                        <div class="card-body">
                  <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Privilige</th>
                      </tr>
                    </thead>
                    <tbody>
                    <%for(var i=0; i<list.length;i++){%>
                      <tr>
                        <td><%=list[i].username%></td>
                        <td><%=list[i].password%></td>
                        <td><%=list[i].rol%></td>
                      </tr>
                    <%}%>
                    </tbody>
                  </table>
                        </div>
                    </div>
                </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


    </div><!-- /#right-panel -->

    <!-- Right Panel -->
<% include ../Partials/footer %>

</body>
</html>
