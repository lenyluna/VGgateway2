<% include ../Partials/head %>

<body style=" background: #f1f2f7">
<!-- Left Panel -->
<% include ../Partials/header %>

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Settings</h1>
                    </div>
                </div>
            </div>
        </div>
<%if(mensaje=="The Username was created successfully"){%>
    <div class="col-sm-12">
    <div class="alert  alert-success alert-dismissible fade show" role="alert" align="center">
         The Username was created successfully
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    </div>
<%}else if(mensaje!=""){%>
<div class="col-sm-12">
    <div id="menj" class="sufee-alert alert with-close alert-danger alert-dismissible fade show" role="alert" align="center">
        <%=mensaje%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
</div>
<%}%>
        <div class="content mt-3">
            <iv  class="animated fadeIn">
              <div class="row">
                <div class="col-md-12">
                  <div class="card">
                      <%if(mensaje!="" && mensaje!="The Username was created successfully" ){%>
                      <div id="dNolmal" class="card-newUserheader" style="display:none;">
                          <button id="btnCreate" type="button" class="btn btn-success" onclick="javascript:mostrar();"><i class="fa fa-magic" ></i>&nbsp; Create User</button>
                          <button id="btnDelete" type="button" class="btn btn-danger" onclick="javascript:tableMostrar(<%=list.length%>);"><i class="fa fa-trash-o"></i>&nbsp; Delete user</button>
                      </div>
                      <div id="dadd" class="card-newUserheader" style='display:block;'>
                          <form action="/newUser" method="post" class="form-horizontal" >
                              <button type="submit" class="btn btn-success"><i class="fa fa-plus" ></i>&nbsp;Add User</button>
                              <button  type="reset" class="btn btn-danger"  onclick="javascript:original();"><i class="fa fa-times"></i>&nbsp;Cancel</button>
                      </div>
                      <div id="dele" class="card-newUserheader" style='display:none;'>
                             <button type="button" class="btn btn-success"  onclick="javascript:eliminar(<%=list.length%>);" ><i class="fa fa-plus" ></i>&nbsp;Confirm</button>
                              <button  type="reset" class="btn btn-danger"  onclick="javascript:tableNormal(<%=list.length%>);"><i class="fa fa-times"></i>&nbsp;Cancel</button>
                      </div>
                      <%}else{%>
                      <div id="dNolmal" class="card-newUserheader">
                          <button id="btnCreate" type="button" class="btn btn-success" onclick="javascript:mostrar();" ><i class="fa fa-magic" ></i>&nbsp; Create User</button>
                          <button id="btnDelete" type="button" class="btn btn-danger" onclick="javascript:tableMostrar(<%=list.length%>);"><i class="fa fa-trash-o"></i>&nbsp; Delete user</button>
                      </div>
                      <div id="dadd" class="card-newUserheader" style='display:none;'>
                          <form action="/newUser" method="post" class="form-horizontal" >
                          <button type="submit" class="btn btn-success"><i class="fa fa-plus" ></i>&nbsp;Add User</button>
                          <button type="reset" class="btn btn-danger"  onclick="javascript:original();"><i class="fa fa-times"></i>&nbsp;Cancel</button>
                      </div>
                      <div id="dele" class="card-newUserheader" style='display:none;'>
                          <button id="btnconfirm" type="button" class="btn btn-success" onclick="javascript:eliminar(<%=list.length%>);" disabled><i class="fa fa-plus" ></i>&nbsp;Confirm</button>
                          <button  type="reset" class="btn btn-danger"  onclick="javascript:tableNormal(<%=list.length%>);"><i class="fa fa-times"></i>&nbsp;Cancel</button>
                      </div>
                      <%}%>
                  </div>
                </div>
              </div>
                <%if(mensaje!="" && mensaje!="The Username was created successfully" ){%>
                <div id="prueba" style='display:block;'>
                    <div class="row" >
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="col col-md-1"><label for="text-input" class=" form-control-label">Username</label></div>
                                    <div class=" col-md-2"><input type="text" name="username" class="form-control" style="height: 25px" required/></div>
                                    <div class="col col-md-1"><label for="text-input" class=" form-control-label">Password</label></div>
                                    <div class="col-md-2 " ><input type="password" name="pass" class="form-control" style="height: 25px" required/></div>
                                    <div class="col col-md-1"><label for="text-input" class=" form-control-label">Confirm </label></div>
                                    <div class="col-md-2 " ><input type="password" name="confir" class="form-control" style="height: 25px" required/></div>
                                    <div class="col col-md-1"><label for="text-input" class=" form-control-label">Privilege</label></div>
                                    <div class="col-md-2">
                                        <select data-placeholder="Choose a Country..." class="standardSelect" tabindex="2"  name="privilegio" >
                                            <option value="Read only">Read Only</option>
                                            <option value="Admin">Admin</option>
                                        </select>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%}else{%>
                <div id="prueba" style='display:none;'>
                    <div class="row" >
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                        <div class="col col-md-1"><label for="text-input" class=" form-control-label">Username</label></div>
                                        <div class=" col-md-2"><input type="text" name="username" class="form-control" style="height: 25px" required/></div>
                                        <div class="col col-md-1"><label for="text-input" class=" form-control-label">Password</label></div>
                                        <div class="col-md-2 " ><input type="password" name="pass" class="form-control" style="height: 25px" required/></div>
                                        <div class="col col-md-1"><label for="text-input" class=" form-control-label">Confirm </label></div>
                                        <div class="col-md-2 " ><input type="password" name="confir" class="form-control" style="height: 25px" required/></div>
                                        <div class="col col-md-1"><label for="text-input" class=" form-control-label">Privilege</label></div>
                                        <div class="col-md-2">
                                            <select data-placeholder="Choose a Country..." class="standardSelect" tabindex="2" name="privilegio">
                                                <option value="Read only">Read only</option>
                                                <option value="Admin">Admin</option>
                                            </select>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
                <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Users Table</strong>
                        </div>
                        <div class="card-body">
                  <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th id="titleCheck" style='display:none;'>Choose</th>
                        <th>Username</th>
                        <th>Privilige</th>
                      </tr>
                    </thead>
                    <tbody>

                    <%for(var i=0; i<list.length;i++){%>
                      <tr >
                          <td id="check<%=i%>" style='display:none;' align="center"><input id="ch<%=i%>" name="<%=list[i].id%>"  type="checkbox" onclick="javascript:table(<%=list.length%>);"></td>
                          <td><%=list[i].username%></td>
                        <td><%=list[i].rol%></td>
                      </tr>
                    <%}%>
                    </tbody>
                  </table>
                        </div>
                    </div>
                </div>
                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


    </div><!-- /#right-panel -->

    <!-- Right Panel -->
<% include ../Partials/footer %>
